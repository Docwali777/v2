<% include ../partials/header %>

<div class="container">
  <div class="row">
  <div class="btn-group btn-group-lg">
    <a href="/votes"><button class='btn btn-default'>All Votes </button></a>
    <a href="/user"> <button class='btn btn-default'>Votes by: <%- user.username %> </button></a>
  </div>
    <div class="header">
      <h1>Votes create by: <%= user.username %></h1>
      <a href="/votes/new">Create New Poll</a>
    </div>
    <% voting.map(d=>{  %>
    <div class="panel panel-default">
      <div class="panel-body">
        Title: <%= d.options.title %>  - <em>created by <strong><%= d.user  %></strong> on - <%= d.options.created.toLocaleString() %></em>

          <a href="/votes/<%= d._id %>/delete"><button class='pull-right btn btn-danger'>Delete</button></a>
          <a href="/votes/<%= d._id %>"><button class='pull-right btn btn-primary'>Vote</button></a>

      </div>
    </div>
    <%  }) %>
  </div>
</div>
